{
  "name": "howdju-browser-extension",
  "private": true,
  "version": "0.2.0",
  "main": "dist/background.js",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "clean": "rm -rf dist",
    "build-prod": "yarn run clean && webpack --progress --profile --color",
    "build-dev": "yarn run clean && webpack --progress --profile --color --mode development",
    "check-format": "yarn run prettier --check --ignore-path .gitignore .",
    "fix-format": "yarn run lint --fix && yarn run prettier --write --ignore-path .gitignore .",
    "lint": "eslint --ignore-path=.gitignore .",
    "package": "bin/package.sh",
    "test": "jest",
    "test-inspect": "node --inspect-brk ../node_modules/.bin/jest --watch --runInBand",
    "watch": "webpack --watch --progress --color --mode development"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "core-js": "^3.12.1",
    "dom-anchor-text-position": "^5.0.0",
    "dom-anchor-text-quote": "^4.0.2",
    "glamor": "^2.20.40",
    "howdju-client-common": "workspace:howdju-client-common",
    "howdju-common": "workspace:howdju-common",
    "lodash": "^4.17.21",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/generator": "^7.13.9",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@babel/runtime": "^7.13.10",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-react-require": "^3.1.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-node6-es6": "^11.2.5",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^8.27.0",
    "eslint-config-howdju": "^1.0.0",
    "eslint-plugin-react": "^7.23.2",
    "jest": "^29.3.1",
    "prettier": "2.7.1",
    "ts-node": "^10.9.1",
    "webpack": "^5.76.0"
  }
}
