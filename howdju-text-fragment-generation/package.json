{
  "name": "howdju-text-fragment-generation",
  "packageManager": "yarn@3.3.1",
  "version": "1.0.0",
  "description": "A client script for generating text fragments for URLs",
  "main": "src/index.ts",
  "repository": "git@github.com:Howdju/howdju.git",
  "author": "Carl Gieringer <carl.gieringer@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build": " yarn run clean && esbuild src/index.ts --bundle --outfile=dist/global-fragment-generation.js --platform=browser --target=es2016",
    "build:global-fragment-generation-script": "yarn run build",
    "check-build": "yarn run build",
    "check-format": "yarn run prettier --check --ignore-path .gitignore .",
    "fix-format": "yarn run lint --fix && yarn run prettier --write --ignore-path .gitignore .",
    "lint": "eslint --ignore-path=.gitignore .",
    "typecheck": "tsc",
    "watch": "esbuild src/index.ts --bundle --outdir=dist --platform=browser --target=es2016 --watch"
  },
  "dependencies": {
    "howdju-client-common": "workspace:howdju-client-common",
    "howdju-common": "workspace:howdju-common",
    "text-fragments-polyfill": "^5.5.0"
  },
  "devDependencies": {
    "esbuild": "^0.18.18",
    "eslint": "^8.27.0",
    "eslint-config-howdju": "workspace:eslint-config-howdju",
    "prettier": "2.7.1",
    "typescript": "^4.9.4"
  }
}
